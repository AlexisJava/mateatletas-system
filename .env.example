# =============================================================================
# MATEATLETAS ECOSYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to `.env` and fill in your actual values
# NEVER commit the actual `.env` file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://postgres:password@localhost:5432/mateatletas?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/mateatletas?schema=public"

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
# Node environment (development, production, test)
NODE_ENV="development"

# Backend API port
PORT=3001

# Frontend application URL (for CORS and redirects)
FRONTEND_URL="http://localhost:3000"

# Backend API URL (for webhooks and callbacks)
BACKEND_URL="http://localhost:3001"

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# JWT secret for token signing (use a strong random string in production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT token expiration time (examples: 1h, 7d, 30d)
JWT_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# ADMIN SEED (for database initialization)
# -----------------------------------------------------------------------------
# Default admin user credentials (change after first login!)
ADMIN_EMAIL="admin@mateatletas.com"
ADMIN_PASSWORD="Admin123!"
ADMIN_NOMBRE="Admin"
ADMIN_APELLIDO="Mateatletas"

# -----------------------------------------------------------------------------
# MERCADOPAGO INTEGRATION
# -----------------------------------------------------------------------------
# MercadoPago Access Token (get from https://www.mercadopago.com/developers)
# Leave as XXXXXXXX for MOCK MODE during development
# Production: Use your real access token (TEST or PROD)
MERCADOPAGO_ACCESS_TOKEN="TEST-XXXXXXXX-XXXXXX-XXXXXX-XXXXXX"

# MercadoPago Webhook Secret (optional, for signature validation)
# Get this from your MercadoPago application settings
# Format: base64-encoded string
MERCADOPAGO_WEBHOOK_SECRET=""

# -----------------------------------------------------------------------------
# EMAIL SERVICE (Optional - for future implementation)
# -----------------------------------------------------------------------------
# SMTP configuration for email notifications
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@mateatletas.com"

# -----------------------------------------------------------------------------
# FILE STORAGE (Optional - for future implementation)
# -----------------------------------------------------------------------------
# AWS S3 or compatible storage for uploads
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_S3_BUCKET="mateatletas-uploads"

# -----------------------------------------------------------------------------
# LOGGING & MONITORING (Optional)
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug, verbose)
LOG_LEVEL="info"

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=""

# -----------------------------------------------------------------------------
# REDIS CACHE (Optional - for future scaling)
# -----------------------------------------------------------------------------
# REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
# Enable Prisma Studio debugging
# PRISMA_STUDIO_PORT=5555

# Enable API documentation (Swagger)
ENABLE_SWAGGER="true"

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
#
# DEVELOPMENT:
# - Use MERCADOPAGO_ACCESS_TOKEN with value "TEST-XXXXXXXX..." to enable MOCK MODE
# - MOCK MODE allows testing without real MercadoPago integration
#
# STAGING:
# - Use MercadoPago TEST credentials
# - Set NODE_ENV=production
# - Use a secure JWT_SECRET
#
# PRODUCTION:
# - Use MercadoPago PRODUCTION credentials
# - Set strong DATABASE_URL with SSL (?sslmode=require)
# - Change default ADMIN_PASSWORD immediately
# - Enable monitoring (Sentry, logs)
# - Set secure CORS origins
#
# =============================================================================
