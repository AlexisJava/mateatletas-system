# ============================================
# MATEATLETAS API - VARIABLES DE ENTORNO
# ============================================

# === DATABASE (OBLIGATORIO) ===
# Railway provee esta autom√°ticamente si usas PostgreSQL plugin
DATABASE_URL="postgresql://user:password@host:5432/database"

# === SERVER (OBLIGATORIO) ===
PORT=3001
NODE_ENV=production

# === AUTH (OBLIGATORIO) ===
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="tu-secreto-jwt-super-seguro-minimo-32-caracteres"
JWT_EXPIRATION="7d"

# === CORS (OBLIGATORIO) ===
FRONTEND_URL="https://tu-dominio-frontend.com"
BACKEND_URL="https://tu-dominio-api.com"

# === MERCADOPAGO (OBLIGATORIO para pagos) ===
MERCADOPAGO_ACCESS_TOKEN="TEST-1234567890-abcdef-ghijkl"
MERCADOPAGO_WEBHOOK_SECRET="tu-webhook-secret"

# === SECURITY (OPCIONAL - tienen defaults) ===
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# === CACHE (OPCIONAL - fallback a memoria) ===
# Si no se configura, usa cache en memoria
REDIS_URL="redis://default:password@host:6379"

# === FEATURE FLAGS (OPCIONAL) ===
SKIP_PLANIFICACIONES_DETECT=false
