{
  "name": "mateatletas",
  "version": "0.0.1",
  "private": true,
  "description": "Mateatletas monorepo - Platform for athletes",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "predev": "bash scripts/verify-dev-environment.sh",
    "dev": "turbo run dev --parallel",
    "dev:verify": "npm run dev & sleep 15 && bash scripts/test-health.sh",
    "dev:recover": "bash scripts/auto-recover.sh",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run start:dev",
    "predev:all": "npm run stop",
    "dev:all": "turbo run dev --parallel",
    "stop": "lsof -ti:3000,3001 | xargs kill -9 2>/dev/null || true",
    "stop:all": "pkill -f 'nest start --watch' 2>/dev/null || true && pkill -f 'next dev' 2>/dev/null || true && npm run stop",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/bcrypt": "^6.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/swagger": "^11.2.1",
    "bcrypt": "^6.0.0",
    "passport-jwt": "^4.0.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx}": "bash scripts/lint-strict.sh",
    "**/*.{json,md,yml,yaml}": "prettier --write"
  }
}
